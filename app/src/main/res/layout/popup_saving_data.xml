<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/jamsil_bold"
        android:text="기록을 등록하시겠습니까?"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtUserNickname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/jamsil_regular"
        android:gravity="center"
        android:hint="닉네임을 입력하세요."
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnSavingOK"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/whiterounded_black_button"
        android:fontFamily="@font/jamsil_regular"
        android:text="예"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/edtUserNickname"
        app:layout_constraintTop_toBottomOf="@+id/edtUserNickname" />

    <Button
        android:id="@+id/btnSavingNO"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/blackrounded_white_button"
        android:fontFamily="@font/jamsil_regular"
        android:text="아니요"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/edtUserNickname"
        app:layout_constraintTop_toTopOf="@+id/btnSavingOK" />

</androidx.constraintlayout.widget.ConstraintLayout>